{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "esnext",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "module": "preserve",
    "lib": ["esnext", "dom", "dom.iterable"],
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["./src/*.ts"]
}
